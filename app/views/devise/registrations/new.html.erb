<h2>noteに登録する</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<div class="field">
        <%= f.label "クリエイター名（noteで表示される名前です）" %> <br />
        <%= f.text_field :creator ,placeholder:"noteさん"%>
      </div>

      <div class="field">
        <%= f.label "note ID（あなたのURLに使われます）" %> <br />
        <%= f.label "3〜16文字の半角英数字＿（アンダースコア）" %><br />
        <%= f.text_field :noteid , placeholder:"noteid"%>
      </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"mail@example" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %> <br />
        <%= f.label "8文字以上の半角英数記号" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
