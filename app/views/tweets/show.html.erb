<%= render "devise/shared/header" %>
<div class="card-text" style="padding-left: 30%;">
<% if @tweet.image.attached? %>
<%= image_tag @tweet.image,width:"40%",height:"20%" %>
<% else %>
<%= image_tag("画像.png",class:"m-largeNoteWrapper__image",width:"60%",height:"100%") %>
<% end %>
<br><div class="cardtitle" style="text-decoration: none; font-weight: 800; font-size: 20px; color: black; ">
<%=  @tweet.title %></div>
<br>
<div class="cardtext" style="text-decoration: none;" >
<%=  @tweet.text %></div>
<br>
<div class="album py-5 bg-light" style="width: 240px;height: 64px;padding-left: 16px;">
<%= link_to '戻る', root_path, method: :get, class: "btn btn-sm btn-outline-secondary" %>
<% if user_signed_in? && current_user.id == @tweet.user.id %>
<%= link_to '編集', edit_tweet_path, method: :get, class: "btn btn-sm btn-outline-secondary" %>
<%= link_to '削除', tweet_path, method: :delete, class:'btn btn-sm btn-outline-secondary' %>
<% end %>
</div>