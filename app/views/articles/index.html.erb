<%= render "devise/shared/header" %>
<div id="cardlayout-wrap">
   <% @article.each do |article| %>
    <section class="card-list">
        <a class="card-link" href="#">
            <figure class="card-figure">
            <% if article.images.attached? %>
<%= link_to image_tag(article.images,class:"m-largeNoteWrapper__image",width:"100%",height:"200px"),article_path(article.id) %>
<% else %>
<%= link_to image_tag("画像.png",class:"m-largeNoteWrapper__image",width:"100%",height:"200px"),article_path(article.id) %>
<% end %></figure>
            <h2 class="card-title"><%= link_to article.title,article_path(article.id),style:"text-decoration: none; font-weight: 800; font-size: 20px; color: black; " %></h2>
            <p>
            <div class="small">
                <%= article.user.creator %>
               <br>
                <%= l article.created_at %></div>
        </a>
    </section>
    <% end %>
    <%= react_component('HelloMessage') %>
</div>  